@model ConferenceManagement.Models.ScheduledResult

@{
    ViewBag.Title = "ScheduleDetails";
}

<h2>Conference Details</h2>

<div>
  
    @foreach (var track in Model.Tracks)
    {
        <h3>Track @track.TrackNumber</h3>

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>
                        Time
                    </th>
                    <th>
                        Session Name
                    </th>
                    <th>
                        Duration
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="3" class="text-center">
                        <h4>Morning Session</h4>
                    </td>
                </tr>
                @Html.Partial("List", track.MorningSession.Talks)
                <tr>
                    <td>
                        @track.LunchTimeString
                    </td>
                    <td>Lunch</td>
                    <td>@((track.LunchBreak.ToTime - track.LunchBreak.FromTime).TotalMinutes) (mins)</td>
                </tr>
                <tr>
                    <td colspan="3" class="text-center">
                        <h4>Afternoon Session</h4>
                    </td>
                </tr>
                @Html.Partial("List", track.AfternoonSession.Talks)
                <tr>
                    <td>
                        @track.NetworkStartTimeString
                    </td>
                    <td>Networking Event</td>
                    <td> ** </td>
                </tr>
            </tbody>
        </table>
    }

</div>

